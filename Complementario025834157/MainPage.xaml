<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Complementario025834157.MainPage">

    <VerticalStackLayout Padding="30">
        <Entry x:Name="NumeroA" Placeholder="Ingrese el número A" Keyboard="Numeric"/>
        <Entry x:Name="NumeroB" Placeholder="Ingrese el número B" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
        <Label x:Name="ResultLabel" Text="Resultado" FontSize="Medium" VerticalOptions="CenterAndExpand"/>

        <Image Source="divi.jpg" 
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="100" 
               HeightRequest="100" />
        
    </VerticalStackLayout>

</ContentPage>
